{
    "name": "creativecoder/piwik-analytics",
    "type": "project",
    "repositories": [
        {
            "type":"package",
            "package": {
              "name": "piwik/SecurityInfo",
              "version": "3.0.4",
              "source": {
                  "url": "https://github.com/piwik/plugin-SecurityInfo",
                  "type": "git",
                  "reference": "3.0.4"
                },
                "type": "piwik-plugin",
                "require": {
                    "composer/installers": "~1.0"
                }
            }
        }
    ],
    "require": {
        "piwik/piwik": "^3.0",
        "php": "^7.1",
        "ext-curl": "*",
        "ext-gd": "*",
        "ext-xml": "*",
        "ext-mbstring": "*",
        "piwik/SecurityInfo": "^3.0",
        "geoip2/geoip2": "^2.6"
    },
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Grant Kinney",
            "email": "hi@grant.mk"
        }
    ],
    "minimum-stability": "stable",
    "scripts": {
        "post-install-cmd": "cp index.php vendor/piwik/piwik/ && cp config.ini.php vendor/piwik/piwik/config/"
    },
    "extra": {
        "installer-paths": {
            "vendor/piwik/piwik/plugins/{$name}/": ["type:piwik-plugin"]
        }
    }
}
